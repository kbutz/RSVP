
<% @everythings.each do |everything| %>
<div class="rsvp_form col-centered center">
    <p>
      <h3><%= everything.guest.full_name %>'s RSVP</h3>
    </p>
    <hr>
    <p>
      <strong>Your Guests:</strong>
      <%= everything.your_friends %>
    </p>
    <p>
      <strong>Friday:</strong>
      <%= everything.friday %>
    </p>

    <p>
      <strong>Friday lodging:</strong>
      <%= everything.friday_lodging %>
    </p>

    <p>
      <strong>Ceremony:</strong>
      <%= everything.ceremony %>
    </p>

    <p>
      <strong>Reception:</strong>
      <%= everything.reception %>
    </p>

    <p>
      <strong>Saturday lodging:</strong>
      <%= everything.saturday_lodging %>
    </p>
    <p>
      <%= link_to 'Show', everything %> |
      <%= link_to 'Edit', edit_everything_path(everything) %> |
      <%= link_to 'Destroy', everything, method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
  
<% end %>

<br>

<%= link_to 'New RSVP', new_everything_path %>
